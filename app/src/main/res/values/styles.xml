<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FEDF00</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
    </style>


    <style name="PersonalInformation">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FEDF00</item>
        <item name="colorPrimaryDark">#FEDF00</item>
        <item name="colorAccent">#FEDF00</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NextQuestionButton">
        <item name="android:textColor">#000000</item>
        <item name="cornerRadius">4dp</item>
        <item name="background">@color/Button</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="RadioButton">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="QuestionTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">5sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FDFDFD</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="VideoText">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>




</resources>